    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^0.20.0",
    "jsonwebtoken": "^8.5.1",
